# ============================================
# Next.js Phusion Passenger Configuration
# ============================================

# Passenger Configuration
PassengerEnabled On
PassengerAppRoot /home/zdnmnkw5/public_html
PassengerAppType node
PassengerStartupFile app.js

# Environment Variables (CRITICAL - These must be set here for Passenger)
PassengerEnvVar NODE_ENV "production"
PassengerEnvVar DATABASE_URL "mysql://zdnmnkw5_admin_user:Zdn%40616498283@localhost:3306/zdnmnkw5_website?connection_limit=3&pool_timeout=20"
PassengerEnvVar NEXTAUTH_SECRET "dAH+JgHlJ0UJ8DZWWXKxvPCxliN8yJu9Okicamw581s="
PassengerEnvVar NEXTAUTH_URL "https://zdn.mn"

# Enable Rewrite Engine
RewriteEngine On

# Allow Next.js static assets to be served directly
RewriteRule ^_next/static/(.*)$ - [L]
RewriteRule ^_next/image/(.*)$ - [L]
RewriteRule ^_next/webpack-hmr$ - [L]

# Allow public folder assets to be served directly
RewriteRule ^favicon.ico$ - [L]
RewriteRule ^robots.txt$ - [L]
RewriteRule ^sitemap.xml$ - [L]
RewriteRule ^sitemap.*\.xml$ - [L]
RewriteRule ^(public|uploads|images|static)/.*$ - [L]

# If file or directory exists, serve it directly
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Pass all other requests to Next.js (Passenger handles routing)
RewriteRule ^(.*)$ - [L]

# ============================================
# Security Headers
# ============================================
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set X-XSS-Protection "1; mode=block"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# ============================================
# Prevent access to sensitive files
# ============================================
<FilesMatch "^\.">
  Require all denied
</FilesMatch>

# Block access to configuration files
<FilesMatch "(^\.env|^\.git|package-lock\.json|yarn\.lock|pnpm-lock\.yaml)$">
  Require all denied
</FilesMatch>

# ============================================
# Cache static assets for better performance
# ============================================
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Images
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"
  
  # CSS and JavaScript
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType text/javascript "access plus 1 month"
  
  # Fonts
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType application/font-woff "access plus 1 year"
  ExpiresByType application/font-woff2 "access plus 1 year"
</IfModule>

# ============================================
# Compression (if mod_deflate is available)
# ============================================
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>